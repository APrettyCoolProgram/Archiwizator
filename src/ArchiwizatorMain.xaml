<Window x:Class="Archiwizator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Archiwizator"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Archiwizator"
        Width="825"
        Height="700"
        mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="175" />
            <RowDefinition Height="220" />
            <RowDefinition Height="100" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Archiwizator : Logo  -->
        <Border x:Name="brdrArchiwizatorLogo"
                Grid.Row="0">
            <Image x:Name="imgArchiwizatorLogo"
                   Width="575"
                   Height="150"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/Resources/Asset/Image/Logo/archiwizator-575x150.png" />
        </Border>

        <!--  Archiwizator : Archiwizator options  -->
        <WrapPanel x:Name="dpnlArchiwizatorOptions"
                   Grid.Row="1">
            <TextBox x:Name="txbxArchiwizatorOptions"
                     Width="21"
                     Margin="20,5,0,5"
                     Padding="3"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Background="#990000"
                     FontFamily="Consolas"
                     FontSize="14"
                     FontWeight="Bold"
                     Foreground="White"
                     Text="ARCHIWIZATOR"
                     TextAlignment="Center"
                     TextWrapping="Wrap"
                     ToolTipService.ShowDuration="10000">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
                <TextBox.ToolTip>
                    <StackPanel>
                        <TextBlock Margin="0,0,0,5"
                                   HorizontalAlignment="Left"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#990000">
                            Archiwizinator options
                        </TextBlock>
                        <TextBlock Margin="0,0,0,5"
                                   HorizontalAlignment="Left"
                                   FontSize="14">
                            Archiwizator options are to the right.
                        </TextBlock>
                        <TextBlock Margin="0,0,0,5"
                                   HorizontalAlignment="Left"
                                   FontSize="12">
                            Mouse over any of the options to the right, and a pop-up will appear with option<LineBreak />
                            descriptions, details, and examples.</TextBlock>
                        <Border Margin="0,8"
                                BorderBrush="#990000"
                                BorderThickness="0,2,0,0" />
                        <TextBlock Margin="0,0,0,5"
                                   FontSize="12">
                            For more information, please see the Archwizator manual.
                        </TextBlock>
                    </StackPanel>
                </TextBox.ToolTip>
            </TextBox>

            <!--  Archiwizator : Archiwizator options : Preparation  -->
            <StackPanel x:Name="spnlArchiwizatorPreparationOptions"
                        Width="250"
                        Margin="0,7,0,10">
                <Label x:Name="lblPreperationOptions"
                       Width="230"
                       Height="25"
                       HorizontalContentAlignment="Center"
                       BorderBrush="#FF990000"
                       BorderThickness="1"
                       Content="PREPARATION"
                       FontFamily="Consolas"
                       FontWeight="Bold"
                       Foreground="#FF990000"
                       ToolTipService.ShowDuration="10000">
                    <Label.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Label.Resources>
                    <Label.ToolTip>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#990000">
                                Preparation options
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="14">
                                These options will be performed prior to Archiwizator compression.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                Mouse over any of the options below, and a pop-up will appear with option<LineBreak />
                                descriptions, details, and examples.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,2,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       HorizontalAlignment="Center"
                                       FontSize="12">
                                For more information, please see the Archwizator manual.
                            </TextBlock>
                        </StackPanel>
                    </Label.ToolTip>
                </Label>

                <!--  Archiwizator : Archiwizator options : Preparation : Extract root archives  -->
                <CheckBox x:Name="ckbxExtractRootArchives"
                          Margin="10,10,0,0"
                          HorizontalAlignment="Left"
                          Content="Extract existing root archives"
                          IsChecked="False"
                          ToolTipService.ShowDuration="10000">
                    <CheckBox.ToolTip>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#990000">
                                Extract existing root archives
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="14">
                                Extracts any archive file in the source directory, then deletes the original<LineBreak />
                                archive files.</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                Enable this option if there are archive files in the source directory that you<LineBreak />
                                want to re-archive using Archiwizator.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,1,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                EXAMPLE
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                The following archives:
                            </TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                ../SourcePath/compressed-file-01.zip<LineBreak />
                                ../SourcePath/compressed-file-02.zip<LineBreak />
                                ..</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                would be extracted to individual sub-directories:
                            </TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                ../SourcePath/compressed-file-01/<LineBreak />
                                ../SourcePath/compressed-file-02/<LineBreak />
                                ...</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                The newly created sub-directories would then be archived by Archiwizator.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                NOTES
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                - Only .zip files will be extracted.
                            </TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,2,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       HorizontalAlignment="Center"
                                       FontSize="12">
                                For more information, please see the Archwizator manual.
                            </TextBlock>
                        </StackPanel>
                    </CheckBox.ToolTip>
                </CheckBox>

                <!--  Archiwizator : Archiwizator options : Preparation : Extract sub-directory archives  -->
                <CheckBox x:Name="ckbxExtractSubDirectoryArchives"
                          Margin="10,5,0,0"
                          HorizontalAlignment="Left"
                          Content="Extract existing sub-directory archives"
                          IsChecked="False"
                          ToolTipService.ShowDuration="10000">
                    <CheckBox.ToolTip>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#990000">
                                Extract existing sub-directory archives
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="14">
                                Extracts any archive file in the all sub-directories of the source directory,<LineBreak />
                                then deletes the original archive files.</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                Enable this option if there are archive files in the sub-directories of the<LineBreak />
                                source directory that you want to re-archive using Archiwizator.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,1,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                EXAMPLE
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                The following archives:
                            </TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                ../SourcePath/SubDirectory01/compressed-file-01.zip<LineBreak />
                                ../SourcePath/SubDirectory01/compressed-file-02.zip<LineBreak />
                                ..<LineBreak />
                                ../SourcePath/SubDirectory99/compressed-file-03.zip<LineBreak />
                                ../SourcePath/SubDirectory99/compressed-file-04.zip<LineBreak />
                                ..</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                would be extracted to individual sub-directories:
                            </TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                ../SourcePath/SubDirectory01/compressed-file-01/<LineBreak />
                                ../SourcePath/SubDirectory01/compressed-file-02/<LineBreak />
                                ..<LineBreak />
                                ../SourcePath/SubDirectory99/compressed-file-03/<LineBreak />
                                ../SourcePath/SubDirectory99/compressed-file-04/<LineBreak />
                                ..</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                The newly created sub-directories would then included in the parent when<LineBreak />
                                archived by Archiwizator.</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                NOTES
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                - Only .zip files will be extracted.<LineBreak />
                                - This won't go further down than one level.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,2,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       HorizontalAlignment="Center"
                                       FontSize="12">
                                For more information, please see the Archwizator manual.
                            </TextBlock>
                        </StackPanel>
                    </CheckBox.ToolTip>
                </CheckBox>

                <!--  Archiwizator : Archiwizator options : Preparation : Remove sub-directories named  -->
                <CheckBox x:Name="ckbxRemoveSubDirectoriesNamed"
                          Margin="10,5,0,0"
                          HorizontalAlignment="Left"
                          Checked="ckbxRemoveSubDirectoriesNamed_CheckChanged"
                          Content="Remove sub-directories named:"
                          IsChecked="False"
                          ToolTipService.ShowDuration="10000"
                          Unchecked="ckbxRemoveSubDirectoriesNamed_CheckChanged">
                    <CheckBox.ToolTip>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#990000">
                                Remove sub-directories named
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="14">
                                Removes sub-directories whose name match the provided list.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                Enable this option if there are specific sub-directories that you don't want included<LineBreak />
                                when using Archiwizator.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,1,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                EXAMPLE
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                If the provided list is:
                            </TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                &quot;!Temp, old, do-not-archive&quot;
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                the following directories would not be archived:
                            </TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                ../SourcePath/temporary/<LineBreak />
                                ../SourcePath/old_data/<LineBreak />
                                ../SourcePath/ignore-this-folder/</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                The remaining sub-directories would then be archived by Archiwizator.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                NOTES
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                - Use caution when using this option!
                            </TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,2,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       HorizontalAlignment="Center"
                                       FontSize="12">
                                For more information, please see the Archwizator manual.
                            </TextBlock>
                        </StackPanel>
                    </CheckBox.ToolTip>
                </CheckBox>
                <TextBox x:Name="txbxRemoveSubDirectoriesNamed"
                         Width="200"
                         Height="18"
                         Margin="10,5,0,0"
                         VerticalAlignment="Top"
                         BorderBrush="Black"
                         IsEnabled="False"
                         Text=""
                         TextWrapping="Wrap"
                         ToolTipService.ShowDuration="10000"
                         ToolTipService.ShowOnDisabled="True">
                    <TextBox.ToolTip>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#990000">
                                List of sub-directories with specific names
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="14">
                                Removes sub-directories that share the name of any member of this list.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                Members are not quoted, and are seperated by commas.
                            </TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,1,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                EXAMPLE
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                If you wanted to remove sub-directories that are named &quot;!Temp&quot;, &quot;old&quot;, or<LineBreak />
                                &quot;do-not-archive&quot;, the list would look like this:</TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                !Temp, old, do-not-archive
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                NOTES
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                - Only active when a &quot;Remove sub-directories named&quot; is checked.<LineBreak />
                                - Don't use quotes.<LineBreak />
                                - Seperate with commas.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,2,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       HorizontalAlignment="Center"
                                       FontSize="12">
                                For more information, please see the Archwizator manual.
                            </TextBlock>
                        </StackPanel>
                    </TextBox.ToolTip>
                </TextBox>

                <!--  Archiwizator : Archiwizator options : Preparation : Remove sub-directories starting with  -->
                <CheckBox x:Name="ckbxRemoveSubDirectoriesStartingWith"
                          Margin="10,5,0,0"
                          HorizontalAlignment="Left"
                          Checked="ckbxRemoveSubDirectoriesStartingWith_CheckChanged"
                          Content="Remove sub-directories starting with:"
                          IsChecked="False"
                          IsEnabled="True"
                          ToolTipService.ShowDuration="10000"
                          ToolTipService.ShowOnDisabled="True"
                          Unchecked="ckbxRemoveSubDirectoriesStartingWith_CheckChanged">
                    <CheckBox.ToolTip>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#990000">
                                Remove sub-directories starting with
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="14">
                                Removes sub-directories that start with any member of the provided list.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                This option is currently disabled.<LineBreak />
                                <LineBreak />
                                Enable this option if there are general sub-directories that you don't want<LineBreak />
                                included when using Archiwizator.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,1,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                EXAMPLE
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                If the provided list is:
                            </TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                &quot;temp, old, ignore&quot;
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                the following directories would not be archived:
                            </TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                ../SourcePath/temporary/<LineBreak />
                                ../SourcePath/old_data/<LineBreak />
                                ../SourcePath/ignore-this-folder/</TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                The remaining sub-directories would then be archived by Archiwizator.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                NOTES
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                - Currently not enabled<LineBreak />
                                - Use caution when using this option!<LineBreak />
                                - You should probably use the &quot;Remove sub-directories named&quot; option instead.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,2,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       HorizontalAlignment="Center"
                                       FontSize="12">
                                For more information, please see the Archwizator manual.
                            </TextBlock>
                        </StackPanel>
                    </CheckBox.ToolTip>
                </CheckBox>
                <TextBox x:Name="txbxRemoveSubDirectoriesStartingWith"
                         Width="200"
                         Height="18"
                         Margin="10,5,0,0"
                         VerticalAlignment="Top"
                         BorderBrush="Black"
                         IsEnabled="False"
                         Text=""
                         TextWrapping="Wrap"
                         ToolTipService.ShowDuration="10000"
                         ToolTipService.ShowOnDisabled="True">
                    <TextBox.ToolTip>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#990000">
                                List of sub-directories starting with
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="14">
                                Removes sub-directories that start with any member of this list.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                Members are not quoted, and are seperated by commas.
                            </TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,1,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                EXAMPLE
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                If you wanted to remove sub-directories that start with &quot;temp&quot;, &quot;old&quot; or<LineBreak />
                                &quot;ignore&quot;, the list would look like this:</TextBlock>
                            <TextBlock Margin="10,0,0,5"
                                       FontSize="12"
                                       FontStyle="Italic">
                                temp, old, ignore
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12"
                                       FontWeight="Bold">
                                <TextBlock.TextDecorations>
                                    <TextDecoration />
                                </TextBlock.TextDecorations>
                                NOTES
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                - Only active when a &quot;Remove sub-directories that start with&quot; is checked.<LineBreak />
                                - Don't use quotes.<LineBreak />
                                - Seperate with commas.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,2,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       HorizontalAlignment="Center"
                                       FontSize="12">
                                For more information, please see the Archwizator manual.
                            </TextBlock>
                        </StackPanel>
                    </TextBox.ToolTip>
                </TextBox>
            </StackPanel>

            <!--  Archiwizator : Archiwizator options : During compression  -->
            <StackPanel x:Name="spnlArchiwizatorDuringCompressingOptions"
                        Width="250"
                        Margin="0,7,0,10">
                <Label x:Name="lblDuringCompressionOptions"
                       Width="230"
                       Height="25"
                       Margin="10,0,0,10"
                       HorizontalAlignment="Left"
                       HorizontalContentAlignment="Center"
                       BorderBrush="#990000"
                       BorderThickness="1"
                       Content="DURING COMPRESSION"
                       FontFamily="Consolas"
                       FontWeight="Bold"
                       Foreground="#FF990000"
                       ToolTipService.ShowDuration="10000">
                    <Label.ToolTip>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#990000">
                                During compression options
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="14">
                                These options will be performed while Archiwizator is creating archives.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,5"
                                       FontSize="12">
                                Mouse over any of the options below, and a pop-up will appear with option<LineBreak />
                                descriptions, details, and examples.</TextBlock>
                            <Border Margin="0,8"
                                    BorderBrush="#990000"
                                    BorderThickness="0,2,0,0" />
                            <TextBlock Margin="0,0,0,5"
                                       HorizontalAlignment="Center"
                                       FontSize="12">
                                For more information, please see the Archwizator manual.
                            </TextBlock>
                        </StackPanel>
                    </Label.ToolTip>
                </Label>

