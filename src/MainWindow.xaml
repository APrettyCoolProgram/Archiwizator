<Window x:Class="Archiwizator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Archiwizator"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Archiwizator"
        Width="600"
        Height="475"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  ROW 0  -->
        <!--  ROW 1  -->
        <Border x:Name="CompressionLevelOptionsBorder"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Background="#ffebeb"
                BorderThickness="0">
            <WrapPanel x:Name="CompressionLevelOptionsWrapPanel">
                <Label x:Name="CompressionLevelDropdownLabel"
                       Margin="10,10,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Content="Compression level"
                       FontWeight="Bold" />
                <ComboBox x:Name="CompressionLevelDropdown"
                          Width="150"
                          Margin="10,12,10,10"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top" />
            </WrapPanel>
        </Border>
        <!--  ROW 2  -->
        <Border x:Name="FolderChoiceBorder"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Background="#ffebeb"
                BorderThickness="0">
            <WrapPanel x:Name="FolderChoiceWrapPanel">
                <Label x:Name="FolderChoiceLabel"
                       Margin="10,10,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Content="Folder"
                       FontWeight="Bold" />
                <TextBox x:Name="FolderChoiceDisplay"
                         Width="450"
                         Margin="10,12,10,10"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         FontSize="14"
                         Text="TextBox"
                         TextWrapping="Wrap" />
                <Button x:Name="FolderChoiceButton"
                        Width="24"
                        Height="24"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="FC" />
            </WrapPanel>
        </Border>
        <!--  ROW 3, COL 0  -->
        <Border x:Name="OptionsLeftSideBorder"
                Grid.Row="3"
                Grid.Column="0"
                Background="#ffebeb"
                BorderThickness="0">
            <WrapPanel x:Name="OptionsLeftSideWrapPanel">
                <Label x:Name="OptionsLabel"
                       Margin="10,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Content="Options"
                       FontWeight="Bold" />
                <CheckBox x:Name="DeleteOriginalFolderCheckBox"
                          Margin="15,0,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Content="Delete original folder after creating archive" />
                <CheckBox x:Name="PrependDateStampCheckBox"
                          Margin="15,5,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Content="Prepend YYMMDD" />
            </WrapPanel>
        </Border>
        <!--  ROW 3, COL 1  -->
        <Border x:Name="OptionsRightSideBorder"
                Grid.Row="3"
                Grid.Column="1"
                Background="#ffebeb">
            <WrapPanel x:Name="OptionsRightSideWrapPanel">
                <CheckBox x:Name="DeleteSpecificFilesBeforeCompressingCheckBox"
                          Margin="0,25,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Content="Delete specific files before compressing" />
                <TextBox x:Name="SpecificFilesToDeleteBeforeCompressingTextBox"
                         Width="261"
                         Height="66"
                         Margin="20,5,0,0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Text="TextBox"
                         TextWrapping="Wrap" />
                <CheckBox x:Name="UncompressFilesBeforeCompressingCheckBox"
                          Width="275"
                          Margin="0,10,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Content="Uncompress files before compressing" />
                <ComboBox x:Name="LevelsOfFilesToUncompressBeforeCompressingComboBox"
                          Width="50"
                          Height="25"
                          Margin="30,0,0,0"
                          Background="White" />
                <Label x:Name="LevelsOfFilesToUncompressBeforeCompressingLabel"
                       Margin="0,5"
                       Content="levels deep" />
            </WrapPanel>
        </Border>
        <!--  ROW 4  -->
        <Border x:Name="StartAndUpdateUserBorder"
                Grid.Row="4"
                Grid.ColumnSpan="2">
            <WrapPanel x:Name="StartAndUpdateUserWrapPanel">
                <Button x:Name="StartButton"
                        Width="100"
                        Height="25"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#990000"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Content="START"
                        FontSize="14"
                        FontWeight="Normal"
                        Foreground="White" />
                <Label x:Name="UpdateUserLabel"
                       Width="400"
                       Margin="10"
                       Content="Click START to begin." />
            </WrapPanel>
        </Border>
    </Grid>
</Window>